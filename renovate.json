{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on monday"
    ]
  },
  "packageRules": [
    {
      "description": "Angular packages together",
      "groupName": "angular",
      "matchPackageNames": [
        "/^@angular/",
        "/^@angular-devkit/",
        "/^angular-eslint/",
        "/^zone.js/"
      ]
    },
    {
      "description": "TypeScript and ESLint together",
      "groupName": "typescript-eslint",
      "matchPackageNames": [
        "/^typescript/",
        "/^eslint/",
        "/^typescript-eslint/"
      ]
    },
    {
      "description": "Spring Boot packages together",
      "groupName": "spring",
      "matchPackageNames": [
        "/^org.springframework/"
      ]
    },
    {
      "description": "Automerge minor/patch if tests pass",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Don't automerge major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
